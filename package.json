{
  "name": "limcode",
  "displayName": "Lim Code",
  "description": "Lim Code 是一个AI编程助手插件，支持多模态和复杂功能。",
  "version": "1.0.49",
  "publisher": "Lianues",
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "AI",
    "Chat",
    "Education",
    "Programming Languages",
    "Snippets",
    "Testing"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "limcode.openChat",
        "title": "LimCode: 打开聊天面板"
      },
      {
        "command": "limcode.newChat",
        "title": "新建对话",
        "icon": "$(add)"
      },
      {
        "command": "limcode.showHistory",
        "title": "对话历史",
        "icon": "$(history)"
      },
      {
        "command": "limcode.showSettings",
        "title": "设置",
        "icon": "$(settings-gear)"
      },
      {
        "command": "limcode.diff.acceptAll",
        "title": "Accept All Changes",
        "icon": "$(check-all)",
        "category": "LimCode"
      },
      {
        "command": "limcode.diff.rejectAll",
        "title": "Reject All Changes",
        "icon": "$(close-all)",
        "category": "LimCode"
      },
      {
        "command": "limcode.diff.acceptBlock",
        "title": "Accept Diff Block...",
        "icon": "$(check)",
        "category": "LimCode"
      },
      {
        "command": "limcode.diff.rejectBlock",
        "title": "Reject Diff Block...",
        "icon": "$(close)",
        "category": "LimCode"
      },
      {
        "command": "limcode.diff.acceptCurrentBlock",
        "title": "Accept Current Diff Block",
        "category": "LimCode"
      },
      {
        "command": "limcode.diff.rejectCurrentBlock",
        "title": "Reject Current Diff Block",
        "category": "LimCode"
      },
      {
        "command": "limcode.diff.nextBlock",
        "title": "Go to Next Diff Block",
        "category": "LimCode"
      },
      {
        "command": "limcode.diff.prevBlock",
        "title": "Go to Previous Diff Block",
        "category": "LimCode"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "limcode.newChat",
          "when": "view == limcode.chatView",
          "group": "navigation@1"
        },
        {
          "command": "limcode.showHistory",
          "when": "view == limcode.chatView",
          "group": "navigation@2"
        },
        {
          "command": "limcode.showSettings",
          "when": "view == limcode.chatView",
          "group": "navigation@3"
        }
      ],
      "editor/title": [
        {
          "command": "limcode.diff.acceptAll",
          "when": "limcode.hasPendingDiff",
          "group": "navigation@1"
        },
        {
          "command": "limcode.diff.rejectAll",
          "when": "limcode.hasPendingDiff",
          "group": "navigation@2"
        },
        {
          "command": "limcode.diff.acceptBlock",
          "when": "limcode.hasPendingDiff",
          "group": "navigation@3"
        },
        {
          "command": "limcode.diff.rejectBlock",
          "when": "limcode.hasPendingDiff",
          "group": "navigation@4"
        }
      ]
    },
    "keybindings": [
      {
        "command": "limcode.diff.acceptCurrentBlock",
        "key": "ctrl+shift+y",
        "mac": "cmd+shift+y",
        "when": "limcode.hasPendingDiff && editorTextFocus"
      },
      {
        "command": "limcode.diff.rejectCurrentBlock",
        "key": "ctrl+shift+n",
        "mac": "cmd+shift+n",
        "when": "limcode.hasPendingDiff && editorTextFocus"
      },
      {
        "command": "limcode.diff.nextBlock",
        "key": "alt+]",
        "mac": "alt+]",
        "when": "limcode.hasPendingDiff && editorTextFocus"
      },
      {
        "command": "limcode.diff.prevBlock",
        "key": "alt+[",
        "mac": "alt+[",
        "when": "limcode.hasPendingDiff && editorTextFocus"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "limcode",
          "title": "Lim Code",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "limcode": [
        {
          "type": "webview",
          "id": "limcode.chatView",
          "name": "Lim Code",
          "icon": "resources/icon.svg"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build:frontend": "cd frontend && pnpm run build",
    "build": "pnpm run compile && pnpm run build:frontend",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.43",
    "fast-xml-parser": "^4.5.0",
    "nanoid": "^5.1.6",
    "tree-kill": "^1.2.2",
    "typescript": "^5.9.3",
    "undici-types": "^6.21.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.2",
    "@types/vscode": "^1.96.0"
  },
  "keywords": [
    "agent",
    "ai",
    "autonomous",
    "chatgpt",
    "claude",
    "gemini",
    "coding",
    "dev",
    "keybindings",
    "mcp",
    "lim code",
    "limcode"
  ],
  "author": "Limerence",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/Lianues/Lim-Code"
  }
}
