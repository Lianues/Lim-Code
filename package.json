{
  "name": "limcode",
  "displayName": "Lim Code",
  "description": "Lim Code 是一个AI编程助手插件，支持多模态和复杂功能。",
  "version": "1.0.69",
  "publisher": "Lianues",
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "AI",
    "Chat",
    "Education",
    "Programming Languages",
    "Snippets",
    "Testing"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "limcode.openChat",
        "title": "LimCode: 打开聊天面板"
      },
      {
        "command": "limcode.context.addSelectionToInput",
        "title": "LimCode: 添加选中代码到输入框"
      },
      {
        "command": "limcode.newChat",
        "title": "新建对话",
        "icon": "$(add)"
      },
      {
        "command": "limcode.showHistory",
        "title": "对话历史",
        "icon": "$(history)"
      },
      {
        "command": "limcode.showSettings",
        "title": "设置",
        "icon": "$(settings-gear)"
      },
      {
        "command": "limcode.diff.acceptAll",
        "title": "Accept All Changes",
        "icon": "$(check-all)",
        "category": "LimCode"
      },
      {
        "command": "limcode.diff.rejectAll",
        "title": "Reject All Changes",
        "icon": "$(close-all)",
        "category": "LimCode"
      },
      {
        "command": "limcode.diff.acceptBlock",
        "title": "Accept Diff Block...",
        "icon": "$(check)",
        "category": "LimCode"
      },
      {
        "command": "limcode.diff.rejectBlock",
        "title": "Reject Diff Block...",
        "icon": "$(close)",
        "category": "LimCode"
      },
      {
        "command": "limcode.diff.acceptCurrentBlock",
        "title": "Accept Current Diff Block",
        "category": "LimCode"
      },
      {
        "command": "limcode.diff.rejectCurrentBlock",
        "title": "Reject Current Diff Block",
        "category": "LimCode"
      },
      {
        "command": "limcode.diff.nextBlock",
        "title": "Go to Next Diff Block",
        "category": "LimCode"
      },
      {
        "command": "limcode.diff.prevBlock",
        "title": "Go to Previous Diff Block",
        "category": "LimCode"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "limcode.newChat",
          "when": "view == limcode.chatView",
          "group": "navigation@1"
        },
        {
          "command": "limcode.showHistory",
          "when": "view == limcode.chatView",
          "group": "navigation@2"
        },
        {
          "command": "limcode.showSettings",
          "when": "view == limcode.chatView",
          "group": "navigation@3"
        }
      ],
      "editor/title": [
        {
          "command": "limcode.diff.acceptAll",
          "when": "limcode.hasPendingDiff",
          "group": "navigation@1"
        },
        {
          "command": "limcode.diff.rejectAll",
          "when": "limcode.hasPendingDiff",
          "group": "navigation@2"
        },
        {
          "command": "limcode.diff.acceptBlock",
          "when": "limcode.hasPendingDiff",
          "group": "navigation@3"
        },
        {
          "command": "limcode.diff.rejectBlock",
          "when": "limcode.hasPendingDiff",
          "group": "navigation@4"
        }
      ]
    },
    "keybindings": [
      {
        "command": "limcode.diff.acceptCurrentBlock",
        "key": "ctrl+shift+y",
        "mac": "cmd+shift+y",
        "when": "limcode.hasPendingDiff && editorTextFocus"
      },
      {
        "command": "limcode.diff.rejectCurrentBlock",
        "key": "ctrl+shift+n",
        "mac": "cmd+shift+n",
        "when": "limcode.hasPendingDiff && editorTextFocus"
      },
      {
        "command": "limcode.diff.nextBlock",
        "key": "alt+]",
        "mac": "alt+]",
        "when": "limcode.hasPendingDiff && editorTextFocus"
      },
      {
        "command": "limcode.diff.prevBlock",
        "key": "alt+[",
        "mac": "alt+[",
        "when": "limcode.hasPendingDiff && editorTextFocus"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "limcode",
          "title": "Lim Code",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "limcode": [
        {
          "type": "webview",
          "id": "limcode.chatView",
          "name": "Lim Code",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "configuration": {
      "title": "Lim Code",
      "properties": {
        "limcode.activeChannelId": {
          "type": "string",
          "default": "",
          "scope": "machine",
          "description": "当前激活的模型渠道 ID（按机器保存，不参与 Settings Sync）"
        },
        "limcode.lastReadAnnouncementVersion": {
          "type": "string",
          "default": "",
          "description": "用户上次查看的公告版本（可同步）"
        },
        "limcode.toolsConfig": {
          "type": "object",
          "default": {},
          "description": "LimCode 工具与提示词等配置（可同步）"
        },
        "limcode.ui": {
          "type": "object",
          "default": {},
          "description": "LimCode UI 配置（可同步）"
        },
        "limcode.toolsEnabled": {
          "type": "object",
          "default": {},
          "description": "工具启用状态（可同步）"
        },
        "limcode.toolAutoExec": {
          "type": "object",
          "default": {},
          "description": "工具自动执行配置（可同步）"
        },
        "limcode.maxToolIterations": {
          "type": "number",
          "default": 50,
          "description": "单回合最大工具调用次数（可同步，-1 表示无限制）"
        },
        "limcode.defaultToolMode": {
          "type": "string",
          "default": "function_call",
          "enum": [
            "function_call",
            "xml"
          ],
          "description": "默认工具模式（可同步）"
        },
        "limcode.proxy": {
          "type": "object",
          "default": {
            "enabled": false
          },
          "scope": "machine",
          "description": "代理设置（按机器保存，不参与 Settings Sync）"
        },
        "limcode.storagePath": {
          "type": "object",
          "default": {},
          "scope": "machine",
          "description": "自定义数据存储路径（按机器保存，不参与 Settings Sync）"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build:frontend": "cd frontend && pnpm run build",
    "build": "pnpm run compile && pnpm run build:frontend",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.43",
    "fast-xml-parser": "^4.5.0",
    "nanoid": "^5.1.6",
    "tree-kill": "^1.2.2",
    "typescript": "^5.9.3",
    "undici-types": "^6.21.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^24.10.2",
    "@types/vscode": "^1.96.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.6"
  },
  "keywords": [
    "agent",
    "ai",
    "autonomous",
    "chatgpt",
    "claude",
    "gemini",
    "coding",
    "dev",
    "keybindings",
    "mcp",
    "lim code",
    "limcode"
  ],
  "author": "Limerence",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/Lianues/Lim-Code"
  }
}
