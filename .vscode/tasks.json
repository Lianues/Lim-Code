{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$tsc"
        },
        {
            "label": "Backend Watch",
            "type": "npm",
            "script": "watch",
            "isBackground": true,
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$tsc-watch"
        },
        {
            "label": "Build Backend",
            "type": "npm",
            "script": "build:backend",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$tsc"
        },
        {
            "label": "Build Frontend",
            "type": "npm",
            "script": "build:frontend",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": []
        },
        {
            "label": "Frontend Dev Server (Vite)",
            "type": "npm",
            "script": "dev:frontend",
            "isBackground": true,
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated"
            },
            "problemMatcher": {
                "base": "$tsc-watch",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".+",
                    "endsPattern": ".*(ready in|Local:).*"
                }
            }
        },
        {
            "label": "Local Dev (Backend Watch + Vite)",
            "dependsOn": [
                "Backend Watch",
                "Frontend Dev Server (Vite)"
            ],
            "dependsOrder": "parallel",
            "problemMatcher": []
        }
    ]
}